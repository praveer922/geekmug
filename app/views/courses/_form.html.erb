<div class="panel panel-default">
	<div class="panel-heading">
		Submit Your Course
	</div>
	<div class="panel-body">
		<div class="container">

			<%= form_for @course, html: {multipart: true} do |f| %>

				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label>Course Title*</label>
							<%= f.text_field :title, class: "form-control" %>
						</div>
					</div>
					<br>
					<div class="col-md-12">
					<div class="form-group">
						<label>About This Course*</label>
						<%= f.text_area :about, rows: 16, placeholder:"Course Description", class: "form-control" %>
					</div>
					</div>
					<br>
					<div class="col-md-12">
					<div class="form-group">
						<label>Link to Course</label>
						<%= f.text_field :link, class: "form-control", value: "http://" %>
					</div>
					</div>
				</div>

				<div class="row">				
					<div class="col-md-6">
						
						<div class="form-group">
							<span class="btn btn-default btn-file">
								<i class="fa fa-cloud-upload fa-lg"></i> Upload Course Photos/Screenshots
								<%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>

						</div>
						
					</div>
				</div>

				

				<div class="row">
					
					<div class="col-md-12">
					<div id="photos"><%= render 'photos/list' %></div>
					</div>
				</div>

				<div class="row">
					
				</div>


				<div class="row">
					<div class="col-md-3 select">
						<div class="form-group">
							<label>Cost*</label><br>
							<%= f.select :freeorpaid, [["Free","Free"], ["Paid","Paid"]], prompt: "Select...", class: "form-control" %>
						</div>
					</div>
					<div class="col-md-9">
						<div class="form-group">
							<label>Price</label>
							<div class="input-group">
								<div class="input-group-addon">$</div>
							<%= f.text_field :price, placeholder:"Leave blank for free courses", class: "form-control" %>
							</div>
						</div>
					</div>
				</div>

				<div class="row">

					<div class="col-md-3 select">
						<div class="form-group">
							<label>Location*</label><br>
							<%= f.select :onlineorphysical, [["Online","Online"], ["Physical","Physical"]], prompt: "Select...", class: "form-control" %>
						</div>
					</div>

					
					<div class="col-md-9">
						<div class="form-group">
						<label>Address</label>
						<%= f.text_field :location, placeholder:"Leave blank for online courses", class: "form-control" %>
						</div>
					</div>
				
				</div>


				<div class="row">
					<div class="col-md-3 select">
						<div class="form-group">
							<label>Level</label><br>
							<%= f.select :level, [["Beginner","Beginner"], ["Intermediate","Intermediate"], ["Advanced","Advanced"]], prompt: "Select...", class: "form-control" %>
						</div>
					</div>
					<div class="col-md-9">
						<div class="form-group">
						<label>Language</label>
						<%= f.text_field :language, placeholder:"What language are you teaching in?", class: "form-control" %>
						</div>
					</div>
				
				</div>

				<div class="row">
					<div class="col-md-12">
					<div class="form-group">
						<label>Syllabus</label>
						<%= f.text_area :syllabus, rows: 18, placeholder:"Syllabus Description", class: "form-control" %>
					</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label>Schedule</label>
							<%= f.text_field :schedule, class: "form-control", placeholder:"E.g. Wednesdays 4pm, Thursdays 6pm. (Leave blank if not applicable)" %>
						</div>
					</div>
				</div>


				<div class="actions">
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>

			<% end %>

		</div>
	</div>
</div>